{
  "name": "vat-management-system",
  "version": "1.0.0",
  "description": "VAT Management and IRD Submission System for Sri Lankan Companies",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "packageManager": "npm@11.7.0",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  }
}
