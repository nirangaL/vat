{
  "info": {
    "name": "VAT Management System API",
    "description": "Complete API collection for VAT Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"P@ssw0rd123\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"role\": \"COMPANY_USER\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', response.data.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', response.data.refreshToken);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"P@ssw0rd123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Verify 2FA",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"123456\",\n  \"method\": \"EMAIL_OTP\",\n  \"tempToken\": \"temp-token-from-login\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/verify-2fa",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "verify-2fa"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "refresh"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Companies",
      "item": [
        {
          "name": "Register Company",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"ABC Solutions (Pvt) Ltd\",\n  \"tin\": \"123456789V\",\n  \"address\": {\n    \"street\": \"123 Main Street\",\n    \"city\": \"Colombo\",\n    \"province\": \"Western Province\",\n    \"postalCode\": \"00100\"\n  },\n  \"contactEmail\": \"contact@abcsolutions.lk\",\n  \"contactPhone\": \"+94112345678\",\n  \"registrationDate\": \"2024-01-01\",\n  \"businessType\": \"Technology Services\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/companies/register",
              "host": ["{{baseUrl}}"],
              "path": ["companies", "register"]
            }
          }
        },
        {
          "name": "Get All Companies",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/companies?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["companies"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Company by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/companies/:id",
              "host": ["{{baseUrl}}"],
              "path": ["companies", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "company-id"
                }
              ]
            }
          }
        },
        {
          "name": "Update Company",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"contactEmail\": \"newemail@abcsolutions.lk\",\n  \"vatRegistrationNumber\": \"VAT123456789\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/companies/:id",
              "host": ["{{baseUrl}}"],
              "path": ["companies", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "company-id"
                }
              ]
            }
          }
        },
        {
          "name": "Validate TIN",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tin\": \"123456789V\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/companies/validate-tin",
              "host": ["{{baseUrl}}"],
              "path": ["companies", "validate-tin"]
            }
          }
        }
      ]
    },
    {
      "name": "Uploads",
      "item": [
        {
          "name": "Upload File",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "/path/to/file.csv"
                },
                {
                  "key": "companyId",
                  "value": "company-id",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/uploads/file",
              "host": ["{{baseUrl}}"],
              "path": ["uploads", "file"]
            }
          }
        },
        {
          "name": "Get Company Uploads",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/uploads/company/:companyId?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["uploads", "company", ":companyId"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ],
              "variable": [
                {
                  "key": "companyId",
                  "value": "company-id"
                }
              ]
            }
          }
        },
        {
          "name": "Get Upload by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/uploads/:id",
              "host": ["{{baseUrl}}"],
              "path": ["uploads", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "upload-id"
                }
              ]
            }
          }
        },
        {
          "name": "Get File URL",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/uploads/:id/url?expiresIn=3600",
              "host": ["{{baseUrl}}"],
              "path": ["uploads", ":id", "url"],
              "query": [
                {
                  "key": "expiresIn",
                  "value": "3600"
                }
              ],
              "variable": [
                {
                  "key": "id",
                  "value": "upload-id"
                }
              ]
            }
          }
        }
      ]
    },
