# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api
APP_NAME=VAT Management System

# Database
MONGODB_URI=mongodb://localhost:27017/vat-management
MONGODB_URI_TEST=mongodb://localhost:27017/vat-management-test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_STORAGE_BUCKET=your-firebase-storage-bucket

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@vatmanagement.lk
EMAIL_FROM_NAME=VAT Management System

# Stripe Configuration (Future)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayHere Configuration (Future)
PAYHERE_MERCHANT_ID=your-merchant-id
PAYHERE_MERCHANT_SECRET=your-merchant-secret
PAYHERE_API_URL=https://sandbox.payhere.lk

# IRD Configuration (Future)
IRD_API_URL=https://ird.gov.lk/api
IRD_API_KEY=your-ird-api-key
IRD_SCRAPER_ENABLED=false

# Security
BCRYPT_ROUNDS=10
OTP_EXPIRY_MINUTES=10
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=text/csv,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:3002
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# WebSocket
WEBSOCKET_PORT=3001
WEBSOCKET_CORS_ORIGIN=*
